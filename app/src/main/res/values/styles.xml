<resources>

    <style name="Widget.Theme.AutofficinApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="new_item_label">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <style name="new_item_label_dark" parent="new_item_label">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="new_item_editText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">#111111</item>
    </style>

    <style name="new_item_editText_dark" parent="new_item_editText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="new_item_title">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#111111</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">300dp</item>
        <item name="backgroundTint">#1027A8</item>
    </style>

</resources>